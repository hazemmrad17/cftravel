[Unit]
Description=CFTravel Python API Server
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/iagent.cftravel.net/cftravel_py
ExecStart=/usr/bin/python -m uvicorn api.server:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10
Environment=PYTHONPATH=/var/www/iagent.cftravel.net/cftravel_py

[Install]
WantedBy=multi-user.target 