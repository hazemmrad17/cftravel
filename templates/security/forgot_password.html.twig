{% extends 'base_auth.html.twig' %}

{% block body %}
<section class="py-28 relative">
  <div class="wrapper">
    <div class="relative max-w-[592px] mx-auto">
      <div class="contact-wrapper border p-14 relative z-30 bg-white dark:bg-dark-primary dark:border-dark-primary border-gray-100">
        <div class="text-center mb-8">
          <h3 class="text-gray-800 font-bold text-3xl mb-2 dark:text-white/90">Mot de passe oublié ?</h3>
          <p class="text-gray-500 dark:text-gray-400">Enter the email address linked to your account, and we’ll send you a link to reset your password.</p>
        </div>
        {% for message in app.flashes('success') %}
          <div class="mb-4 px-4 py-2 rounded-lg bg-green-100 text-green-700 text-center font-medium">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
          <div class="mb-4 px-4 py-2 rounded-lg bg-red-100 text-red-700 text-center font-medium">{{ message }}</div>
        {% endfor %}
        <form method="post">
          <div class="grid gap-5">
            <div>
              <label for="forgot_email" class="mb-1 block dark:text-gray-400 text-gray-700 font-medium text-sm">Email</label>
              <input type="email" id="forgot_email" name="email" required autofocus class="border w-full text-sm dark:text-white/90 dark:placeholder:text-white/30 dark:border-gray-700 text-gray-800 placeholder:text-sm placeholder:text-gray-400 focus:border-primary-300 dark:focus:border-primary-500 focus:outline-0 focus:ring-3 focus:ring-primary-300/20 text-left h-12 shadow-theme-xs border-gray-300 rounded-full px-5 py-2.5" placeholder="Entrez votre adresse email" />
            </div>
            <div class="col-span-full">
              <button class="bg-primary-500 hover:bg-primary-600 transition py-3 px-6 w-full font-medium text-white text-sm rounded-full">Envoyer le lien de réinitialisation</button>
            </div>
          </div>
        </form>
        <div class="mt-5">
          <p class="text-gray-700 dark:text-gray-400 font-normal text-sm">
            Attendez, je me souviens de mon mot de passe...
            							<a href="{{ path('chat_home') }}" class="text-sm font-semibold text-primary-500">Cliquez ici</a>
          </p>
        </div>
      </div>
    </div>
  </div>
  <span class="absolute -bottom-32 left-1/2 -translate-x-1/2 z-0">
    <svg width="930" height="760" viewBox="0 0 930 760" fill="none" xmlns="http://www.w3.org/2000/svg">
      <g opacity="0.3" filter="url(#filter0_f_9248_10254)">
        <circle cx="380.335" cy="380.335" r="179.665" fill="#FF58D5" />
      </g>
      <g opacity="0.7" filter="url(#filter1_f_9248_10254)">
        <circle cx="549.665" cy="380.335" r="179.665" fill="#4E6EFF" />
      </g>
      <defs>
        <filter id="filter0_f_9248_10254" x="0.669922" y="0.6698" width="759.33" height="759.33" filterUnits="userSpaceOnUse" color-interpolation-filters="sRGB">
          <feFlood flood-opacity="0" result="BackgroundImageFix" />
          <feBlend mode="normal" in="SourceGraphic" in2="BackgroundImageFix" result="shape" />
          <feGaussianBlur stdDeviation="100" result="effect1_foregroundBlur_9248_10254" />
        </filter>
        <filter id="filter1_f_9248_10254" x="170" y="0.6698" width="759.33" height="759.33" filterUnits="userSpaceOnUse" color-interpolation-filters="sRGB">
          <feFlood flood-opacity="0" result="BackgroundImageFix" />
          <feBlend mode="normal" in="SourceGraphic" in2="BackgroundImageFix" result="shape" />
          <feGaussianBlur stdDeviation="100" result="effect1_foregroundBlur_9248_10254" />
        </filter>
      </defs>
    </svg>
  </span>
</section>
{% endblock %}
