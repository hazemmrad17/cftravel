        function updateStats() {
            // Fetch real-time stats from backend
            fetchRealTimeStats();
            
            // Update stats every 5 seconds
            setInterval(() => {
                fetchRealTimeStats();
            }, 5000);
        }

        function addDebugEntry(type, message) {
            const console = document.getElementById('debug-console');
            if (console) {
                const entry = document.createElement('div');
                entry.className = `debug-entry ${type}`;
                entry.textContent = `[${new Date().toLocaleTimeString()}] ${message}`;
                console.appendChild(entry);
                console.scrollTop = console.scrollHeight;
            }
        }

        function clearDebugConsole() {
            const console = document.getElementById('debug-console');
            if (console) {
                console.innerHTML = '<div class="debug-entry info">Console vid√©e</div>';
                addDebugEntry('info', 'Console de debug vid√©e');
            }
        }

        function exportDebugLogs() {
            const console = document.getElementById('debug-console');
            if (console) {
                const logs = console.innerText;
                const blob = new Blob([logs], { type: 'text/plain' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
