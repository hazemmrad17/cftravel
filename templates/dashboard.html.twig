            // Send to backend API
            fetch('/api/settings/save', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    settings: settings,
                    timestamp: new Date().toISOString(),
                    user_id: '1'
                })
            }).then(response => {
